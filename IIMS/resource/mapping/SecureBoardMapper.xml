	<resultMap id="secureBoardSelectMap" type="SecureBoardVo">
		<result property="id"		column="id"			jdbcType="NUMERIC"/>
		<result property="regDate" 	column="reg_date" 	jdbcType="VARCHAR"/>
		<result property="category"	column="category" 	jdbcType="VARCHAR" />
		<result property="title" 	column="title" 	jdbcType="VARCHAR" />
		<result property="contents" column="contents" 		jdbcType="VARCHAR" />
		<result property="note" 	column="note" 		jdbcType="VARCHAR" />
		<result property="userId" 	column="user_id" jdbcType="VARCHAR" />
	</resultMap>
	
	<!-- SQL : INSERT -->
	<insert 	id="insertSecureBoard"		parameterType="SecureBoardVo" >
	 	INSERT INTO secure_board (id , reg_date, category , title , contents, note, user_id) VALUES (0,SYSDATE(),#{category},#{title},#{contents},#{note},#{userId})
	 </insert>
	 
	 <!-- SQL : SELECT ONE -->
	 <select 	id="getSecureBoard"	parameterType="int"	resultMap="secureBoardSelectMap">
		SELECT id,reg_date,category,title,contents,note,user_id		
		FROM secure_board
		WHERE id = #{value}
	 </select>
	 
	 <!-- SQL : UPDATE -->
	 <update	id="updateSecureBoard"	parameterType="SecureBoardVo" >
	   	UPDATE secure_board
	   	<set>
			category	= #{category},
			title 		= #{title} ,
			contents	= #{contents},
			note 		= #{note}
	   	</set>
	   	WHERE id = #{id}
	 </update>
	 
	 <!-- SQL : DELETE -->
	 <delete	id="deleteSecureBoard"	parameterType="int" >
	   	delete from secure_board WHERE id = #{value}
	 </delete>
		 
	<!-- SQL : SELECT LIST -->

	<select  id="getSecureBoardList" parameterType="SecureBoardVo" resultMap="secureBoardSelectMap">
